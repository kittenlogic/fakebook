<div class="row hug-down">
  <div class="col-md-5">
    <h1>Spaaaaaaaaaaaaaaaaaaaaaaa@m!</h1>
    <%= link_to "MOOOOOOOOOOOOOOOORE MEEEEEEEEEEEEEEEEEEEEAT!", new_status_path, class: "btn btn-lg btn-success hugs"  %>
    
    <img src="http://upload.wikimedia.org/wikipedia/commons/0/08/Circle_of_spam.svg" width="600px"/>
    
  </div>
      
    
  
  <div class="col-md-3 col-md-offset-3 border-form-div ">
    <% @statuses.each do |status| %>
    <div class="status">
      <div>
        <%= image_tag status.user.gravatar_url %>
      </div>
      <strong><%= status.user.full_name %></strong>
      <p><%= status.content %></p>
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <span class="admin"> 
          <% if current_user == status.user %> |
          <%= link_to "Edit", edit_status_path(status) %> |
          <%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete this status?"} %>
          <% end %>
        </span>  
      </div>  
    </div>  
    <% end %>
  </div>  

</div>



