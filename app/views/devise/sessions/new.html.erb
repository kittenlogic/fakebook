
<div class="row">
	<div class="col-md-4 border-form-div">
		<h2>Sign in</h2>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'well' }) do |f| %>
		  <%= f.input :email %>
		  <%= f.input :password %>

		  <% if devise_mapping.rememberable? -%>
		   <%= f.input :remember_me, as: :boolean %> 
		  <% end -%>

		  <div><%= f.button :submit, "Sign in", class: "btn btn-warning" %></div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
	
	<div class="col-md-4">
		<h2>WTF? Don't sign in.</h2>
	</div>	
	
</div>		
